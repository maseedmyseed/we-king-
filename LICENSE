// Array of weekday names
const daysOfWeek = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

// Array of messages for each day
const messages = [
  "Time to relax!",       // Sunday
  "Start of a new week!", // Monday
  "Keep going strong!",   // Tuesday
  "Midweek hustle!",      // Wednesday
  "Almost there!",        // Thursday
  "Finish line is close!",// Friday
  "Enjoy the weekend!"    // Saturday
];

// Get the current day (0 = Sunday, 6 = Saturday)
const today = new Date().getDay();

// Get the day message element
const dayMessage = document.getElementById("dayMessage");

// Display the current day and message
dayMessage.textContent = `It's ${daysOfWeek[today]} - ${messages[today]}`;
